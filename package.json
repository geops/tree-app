{
  "name": "@geops/tree-app",
  "description": "Web app for tree recommendations.",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@geops/tree-lib": "^0.2.0",
    "i18next": "^17.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-i18next": "^10.11.2",
    "react-scripts": "^3.0.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@tailwindcss/custom-forms": "^0.2.0",
    "autoprefixer": "^9.6.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "tailwindcss": "^1.0.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "tailwind.css",
    "translation.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn install --frozen-lockfile; fi",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint src --fix",
      "prettier --write 'src/**/*.js'",
      "git add",
      "react-scripts test --bail --findRelatedTests --watchAll=false"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "scripts": {
    "tailwind": "postcss src/tailwind.css -o src/index.css",
    "start": "yarn tailwind && react-scripts start",
    "build": "NODE_ENV=production yarn tailwind && react-scripts build",
    "lint": "yarn tailwind && eslint src",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  }
}
