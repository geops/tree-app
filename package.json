{
  "name": "@geops/tree-app",
  "description": "Web app for tree recommendations.",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@geops/tree-lib": "^0.7.7",
    "i18next": "^17.0.11",
    "mapbox-gl": "^1.2.1",
    "ol": "^6.0.0-beta.12",
    "proj4": "^2.5.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-i18next": "^10.12.0",
    "react-redux": "^7.1.0",
    "react-scripts": "^3.1.0",
    "redux": "^4.0.4",
    "redux-query-sync": "^0.1.8",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.87.2",
    "webgl-mock": "^0.1.7"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.9.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "*.json",
    "*.css"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn install --frozen-lockfile; fi",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint src --fix",
      "prettier --write 'src/**/*.js'",
      "git add",
      "react-scripts test --bail --findRelatedTests --watchAll=false"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint src",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!ol)/\"",
    "eject": "react-scripts eject"
  }
}
