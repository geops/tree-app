{
  "name": "@geops/tree-app",
  "description": "Web app for tree recommendations.",
  "license": "MIT",
  "version": "1.0.1",
  "private": true,
  "dependencies": {
    "i18next": "19.4.5",
    "lodash.difference": "4.5.0",
    "lodash.intersection": "4.4.0",
    "lodash.union": "4.6.0",
    "lodash.xor": "4.5.0",
    "mapbox-gl": "1.11.0",
    "ol": "6.3.1",
    "proj4": "2.6.2",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-i18next": "11.5.1",
    "react-redux": "7.2.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "react-toastify": "6.0.5",
    "redux": "4.0.5",
    "redux-query-sync": "0.1.9",
    "semantic-ui-css": "2.4.1",
    "semantic-ui-react": "0.88.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "babel-eslint": "10.1.0",
    "cra-append-sw": "2.7.0",
    "cypress": "4.8.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-cypress": "2.11.1",
    "eslint-plugin-flowtype": "5.1.3",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.5",
    "husky": "4.2.5",
    "lint-staged": "10.2.10",
    "prettier": "2.0.5",
    "react-test-renderer": "16.13.1",
    "start-server-and-test": "1.11.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "plugin:cypress/recommended",
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "*.json",
    "*.css"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn install --frozen-lockfile; fi",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint src --fix",
      "prettier --write 'src/**/*.js'"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:ci": "start-server-and-test start http://localhost:3000 'cypress run --record'",
    "start": "react-scripts start",
    "build": "react-scripts build && cra-append-sw ./src/tilesServiceWorker.js",
    "lint": "eslint src",
    "format": "prettier --write 'src/**/*.js'",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!ol)/\"",
    "eject": "react-scripts eject"
  }
}
